@model IEnumerable<Gestor_de_restaurante.net.Models.Empleado>


@{
    ViewBag.Title = "index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear empleado", "crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>

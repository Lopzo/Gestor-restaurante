                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cargo)
            </td>
            <td>
                @Html.ActionLink("Edit", "modificar", new { idEmpleado=item.idEmpleado }) |
                @Html.ActionLink("Details", "ver", new {idEmplado=item.idEmpleado  }) |
                @Html.ActionLink("Delete", "eliminar", new { idEmpleado=item.idEmpleado  })
            </td>
        </tr>
    }

</table>
